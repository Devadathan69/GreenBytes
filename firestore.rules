rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function (Bypassed for Hybrid Mode)
    function isAuthenticated() {
      return true; // Allow anyone (since we use mock login)
    }
    
    // User Profiles
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Community Posts
    match /communityPosts/{postId} {
      allow read, write: if true;
    }
    
    // Default: Deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
